<script>
let noCount = 0;
let yesScale = 1;

function handleNo() {
  noCount++;
  const yesBtn = document.getElementById('yes');
  const noBtn = document.getElementById('no');
  const angryCat = document.getElementById('angryCat');
  const btnGroup = document.getElementById('btnGroup');

  if (noCount < 4) {
    // ‡ßß-‡ß© ‡¶¨‡¶æ‡¶∞: Yes ‡¶¨‡¶æ‡¶ü‡¶® ‡¶¨‡ßú ‡¶π‡¶¨‡ßá ‡¶è‡¶¨‡¶Ç No ‡¶™‡¶æ‡¶≤‡¶æ‡¶¨‡ßá
    yesScale += 0.4;
    yesBtn.style.transform = `scale(${yesScale})`;
    
    const x = Math.random() * (window.innerWidth - 120);
    const y = Math.random() * (window.innerHeight - 100);
    noBtn.style.position = 'fixed';
    noBtn.style.left = Math.max(20, x) + 'px';
    noBtn.style.top = Math.max(20, y) + 'px';
  } 
  else if (noCount === 4) {
    // ‡ß™ ‡¶®‡¶Æ‡ßç‡¶¨‡¶∞ ‡¶¨‡¶æ‡¶∞: ‡¶¨‡¶ø‡ßú‡¶æ‡¶≤‡ßá‡¶∞ ‡¶õ‡¶¨‡¶ø ‡ß© ‡¶∏‡ßá‡¶ï‡ßá‡¶®‡ßç‡¶°‡ßá‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø
    btnGroup.style.visibility = 'hidden';
    angryCat.style.display = 'block';

    setTimeout(() => {
      angryCat.style.display = 'none';
      btnGroup.style.visibility = 'visible';
      
      // No ‡¶¨‡¶æ‡¶ü‡¶® ‡¶°‡¶ø‡¶≤‡¶ø‡¶ü ‡¶ï‡¶∞‡ßá Yes ‡¶¨‡¶ø‡¶∂‡¶æ‡¶≤ ‡¶ï‡¶∞‡¶æ
      noBtn.style.display = 'none';
      yesScale = 5; 
      yesBtn.style.position = 'fixed';
      yesBtn.style.top = '50%';
      yesBtn.style.left = '50%';
      yesBtn.style.transform = 'translate(-50%, -50%) scale(' + yesScale + ')';
    }, 3000);
  }
}

function showLove() {
  document.getElementById('mainUI').style.display = 'none';
  const msgBox = document.getElementById('message-box');
  msgBox.style.display = 'block';

  const audio = document.getElementById('music');
  audio.volume = 0.5;
  audio.play().catch(() => {});

  // ‡¶∞‡¶ô‡¶ø‡¶® ‡¶Ö‡¶≠‡¶ø‡¶®‡¶®‡ßç‡¶¶‡¶® ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶®‡¶ø‡¶Æ‡ßá‡¶∂‡¶®
  setInterval(createConfetti, 250);

  // ‡¶ü‡¶æ‡¶á‡¶™‡¶ø‡¶Ç ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú Nazmul ‡¶®‡¶æ‡¶Æ‡ßá
  const messageText = "My beloved Lamiya,\nYou are always in my heart.\nI am always ready to be by your side.\nI know that everything will be even more beautiful if we are together.\n\nHappy Valentine‚Äôs Day ‚ù§Ô∏è\n- Nazmul";
  
  let i = 0;
  msgBox.innerHTML = "";
  function typeWriter() {
    if (i < messageText.length) {
      msgBox.innerHTML += messageText.charAt(i) === '\n' ? '<br>' : messageText.charAt(i);
      i++;
      setTimeout(typeWriter, 60);
    }
  }
  typeWriter();
}

function createConfetti() {
  const emojis = ["‚ù§Ô∏è", "üíñ", "üéâ", "‚ú®", "üíï", "üéä", "üíö", "üíû", "ü´Ç"];
  const c = document.createElement("div");
  c.className = "confetti";
  c.innerHTML = emojis[Math.floor(Math.random() * emojis.length)];
  c.style.left = Math.random() * 95 + "vw";
  c.style.fontSize = (Math.random() * 25 + 20) + "px";
  document.body.appendChild(c);
  setTimeout(() => c.remove(), 5000);
}
</script>

